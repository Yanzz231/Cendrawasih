generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement()) //1
  username String
  email    String
  password String
  image    String

  @@unique([username, email])
}

model like_history {
  id_username String @id // 1
  id_post     String //3
}

model post {
  id Int @id @default(autoincrement()) // 3
}

model comment_post {
  id_post    Int // 3
  id_comment Int    @id @default(autoincrement())
  value      String
}

model comment_post_replay {
  id_post    Int
  id_comment Int    @id
  value      String
}
